@using ExPaper.SharedModels.Lib.DTO;
@model RegisterRequestDto

<form asp.asp-controller="Auth" asp-action="Register" method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>add-user</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="Name" class="text-danger" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password..." />
                <span asp-validation-for="ConfirmPassword" class="text-danger" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Anlegen</button>
            </div>
        </div>
    </div>
</form>

@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}