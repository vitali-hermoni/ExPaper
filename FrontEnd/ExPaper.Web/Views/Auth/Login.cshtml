@using ExPaper.SharedModels.Lib.DTO;
@model LoginRequestDto


<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>login</h1>
        </div>
        <div class="row">
            <table>
                <tr>
                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <input asp-for="UserName" class="form-control" placeholder="email@example.com" />
                        <span asp-validation-for="UserName" class="text-danger" />
                    </div>

                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger" />
                    </div>

                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <button type="submit" class="form-control btn btn-success" value="Submit">Login</button>
                    </div>

                    @* <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <a asp-action="Register">Registrieren</a>
                    </div> *@

                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <a asp-action="ForgotPassword">Passwort vergessen</a>
                    </div>
                </tr>
            </table>
        </div>
    </div>
</form>



@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}