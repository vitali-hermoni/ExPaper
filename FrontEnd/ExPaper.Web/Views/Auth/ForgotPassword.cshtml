@using ExPaper.SharedModels.Lib.DTO;
@model ForgotPasswordDto


<form asp-controller="Auth" asp-action="ForgotPassword" method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Bitte Mailadresse eingeben.</h1>
        </div>
        <div class="row">
            <table>
                <tr>
                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                        <span asp-validation-for="Email" class="text-danger" />
                    </div>

                    <div class="col-12 col-md-6 offset-md-3 pb-2">
                        <button type="submit" class="form-control btn btn-success" value="Submit">Zurück setzen</button>
                    </div>

                </tr>
            </table>
        </div>
    </div>
</form>



@section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
    }